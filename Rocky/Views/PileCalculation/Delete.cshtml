@model Rocky.Models.SoilProperties

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Удалить грунт</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NumberOfSoil">Номер грунта</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumberOfSoil" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name">Наименование грунта</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NameOfSand">Крупность песка</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NameOfSand" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PorosityCoefficient">Коэффициент пористости</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PorosityCoefficient" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="YieldRate">Показатель текучести</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="YieldRate" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Удалить" />  <!--Кнопка "Отправить": <input type="submit">-->
                        </div>
                        <div class="col">
                            <a asp-action="SoilTable" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> &nbsp; Назад</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



