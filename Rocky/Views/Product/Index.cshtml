@model IEnumerable<Rocky.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <!--Предназначен для хранения одной или нескольких строк, которые представлены вверху таблицы. Допустимо использовать не более одного элемента-->
                <tr>
                    <!--служит контейнером для создания строки таблицы. Каждая ячейка в пределах такой строки может задаваться с помощью тега <th> или <td>.-->
                    <th>
                        Product Name
                    </th>
                    <!--Тег <th> предназначен для создания одной ячейки таблицы, которая обозначается как заголовочная.
                        Текст в такой ячейке отображается браузером обычно жирным шрифтом и выравнивается по центру. Тег
                        <th> должен размещаться внутри контейнера <tr>, который в свою очередь располагается внутри тега <table>.-->
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Price</td>
                        <td>
                            <div class="w-75 btn-group text-center" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-primary mx-2"><i class="fas fa-edit text-center"></i> &nbsp;</a>

                                <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2"><i class="fas fa-trash-alt text-center"></i> &nbsp; </a>
                            </div>
                        </td>
                        <!--Предназначен для создания одной ячейки таблицы.
                                Тег <td> должен размещаться внутри контейнера <tr>,
                                который в свою очередь располагается внутри тега <table>.-->
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
       <p>No Product Exist !</p>
    }

</div>
